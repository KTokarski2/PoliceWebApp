<%- include('../../fragments/header.ejs') %>

<main>
    <script type="application/javascript" src="/js/validationPoliceOfficerForm.js"></script>
    <script type="application/javascript" src="/js/validationCommon.js"></script>
    <h2><%= pageTitle %></h2>
    <form class="form" method="post" action="<%= formAction %>" novalidate>
        <input type="hidden" name="_id" value="<%= policeOfficer._id %>">

        <label for="firstName"><%= __('policeOfficer.fields.firstName')%> <span class="symbol-required">*</span></label>
        <input class="<%= validationErrors.find(e => e.path.includes('firstName')) ? 'error-input' : '' %>" type="text" name="firstName" id="firstName" placeholder="2-50 znaków" value="<%= policeOfficer.firstName %>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorFirstName" class="errors-text">
            <% if (validationErrors && validationErrors.find(e => e.path.includes('firstName'))) { %>
                <%= __(validationErrors.find(e => e.path.includes('firstName')).message) %>
            <% } %>
        </span>

        <label for="lastName"><%= __('policeOfficer.fields.lastName')%><span class="symbol-required">*</span></label>
        <input class="<%= validationErrors.find(e => e.path.includes('lastName')) ? 'error-input' : '' %>" type="text" name="lastName" id="lastName" placeholder="2-50 znaków" value="<%= policeOfficer.lastName%>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorLastName" class="errors-text">
            <% if (validationErrors && validationErrors.find(e => e.path.includes('lastName'))) { %>
                <%= __(validationErrors.find(e => e.path.includes('lastName')).message) %>
            <% } %>
        </span>



            <label for="password"><%= __('policeOfficer.fields.password')%> <span class="symbol-required">*</span></label>
            <input class="<%= validationErrors.find(e => e.path.includes('password')) ? 'error-input' : '' %>" type="password"
                   name="password" id="password" placeholder="2-50 znaków" value="<%= policeOfficer.password%>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
            <span id="errorPassword" class="errors-text">
                <% if (validationErrors && validationErrors.find(e => e.path.includes('password'))) { %>
                    <%= __(validationErrors.find(e => e.path.includes('password')).message) %>
                <% } %>
            </span>




        <label for="rank"><%= __('policeOfficer.fields.rank')%><span class="symbol-required">*</span></label>
        <select class="<%= validationErrors.find(e => e.path.includes('rank')) ? 'error-input' : '' %>" name="rank" id="rank" <%= (formMode == 'showDetails') ? 'disabled' : '' %>>
            <% if (formMode != 'createNew') { %>
            <option><%= policeOfficer.rank %></option>
            <option value="Posterunkowy">Posterunkowy</option>
            <option value="Starszy posterunkowy">Starszy posterunkowy</option>
            <option value="Sierżant">Sierżant</option>
            <option value="Starszy sierżant">Starszy sierżant</option>
            <option value="Sierżant sztabowy">Sierżant sztabowy</option>
            <option value="Młodszy aspirant">Młodszy aspirant</option>
            <option value="Aspirant">Aspirant</option>
            <option value="Starszy aspirant">Starszy aspirant</option>
            <option value="Aspirant sztabowy">Aspirant sztabowy</option>
            <option value="Podkomisarz">Podkomisarz</option>
            <option value="Komisarz">Komisarz</option>
            <option value="Nadkomisarz">Nadkomisarz</option>
            <option value="Podinspektor">Podinspektor</option>
            <option value="Młodszy inspektor">Młodszy inspektor</option>
            <option value="Inspektor">Inspektor</option>
            <option value="Nadinspektor">Nadinspektor</option>
            <option value="Generalny inspektor">Generalny inspektor</option>
            <% }else { %>
                    <option value="" selected><%= __('policeOfficer.form.rankSelect') %></option>
                    <option value="Posterunkowy">Posterunkowy</option>
                    <option value="Starszy posterunkowy">Starszy posterunkowy</option>
                    <option value="Sierżant">Sierżant</option>
                    <option value="Starszy sierżant">Starszy sierżant</option>
                    <option value="Sierżant sztabowy">Sierżant sztabowy</option>
                    <option value="Młodszy aspirant">Młodszy aspirant</option>
                    <option value="Aspirant">Aspirant</option>
                    <option value="Starszy aspirant">Starszy aspirant</option>
                    <option value="Aspirant sztabowy">Aspirant sztabowy</option>
                    <option value="Podkomisarz">Podkomisarz</option>
                    <option value="Komisarz">Komisarz</option>
                    <option value="Nadkomisarz">Nadkomisarz</option>
                    <option value="Podinspektor">Podinspektor</option>
                    <option value="Młodszy inspektor">Młodszy inspektor</option>
                    <option value="Inspektor">Inspektor</option>
                    <option value="Nadinspektor">Nadinspektor</option>
                    <option value="Generalny inspektor">Generalny inspektor</option>
            <% } %>
        </select>
        <span id="errorRank" class="errors-text">
            <% if (validationErrors && validationErrors.find(e => e.path.includes('rank'))) { %>
                <%= __(validationErrors.find(e => e.path.includes('rank')).message) %>
            <% } %>
        </span>

        <label for="department"><%= __('policeOfficer.fields.department') %><span class="symbol-required">*</span></label>
        <input class="<%= validationErrors.find(e => e.path.includes('department')) ? 'error-input' : '' %>" type="text" name="department" id="department" placeholder="2-50 znaków" value="<%= policeOfficer.department%>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorDepartment" class="errors-text">
            <%if (validationErrors && validationErrors.find(e => e.path.includes('department'))) { %>
                <%= __(validationErrors.find(e => e.path.includes('department')).message) %>
            <% } %>
        </span>

        <label for="salary"><%= __('policeOfficer.fields.salary')%><span class="symbol-required">*</span></label>
        <input class="<%= validationErrors.find(e => e.path.includes('salary')) ? 'error-input' : '' %>" type="text" name="salary" id="salary" step="any" placeholder="np. 3000.00 zł" value="<%= isNaN(policeOfficer.salary) ? "" : policeOfficer.salary %>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorSalary" class="errors-text">
            <% if (validationErrors && validationErrors.find(e => e.path.includes('salary'))) { %>
                <%= __(validationErrors.find(e => e.path.includes('salary')).message) %>
            <% } %>
        </span>

            <% if (formMode != 'showDetails') { %>
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
                <input class="form-button-submit" type="submit" value="<%= btnLabel %>"/>
                <a class="form-button-cancel" href="/PoliceOfficer"><%= __('form.actions.cancel')%></a>
            </div>
            <% } else { %>
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
            <a class="details-button-edit" href="/PoliceOfficer/edit/<%= policeOfficer._id%>"><%= __('form.actions.edit')%></a>
            <a class="form-button-cancel" href="/PoliceOfficer"><%= __('form.actions.return')%></a>
            </div>
            <% } %>

    </form>
    <% if (formMode == 'showDetails') { %>
    <h2><%= __('policeOfficer.form.participation') %></h2>
    <table class="table-list">
        <thead>
        <tr>
            <th><%= __('case.fields.case') %></th>
            <th><%= __('participation.fields.startingDate') %></th>
            <th><%= __('participation.fields.endingDate') %></th>
            <th><%= __('participation.fields.actionsTaken') %></th>
        </tr>
        </thead>
        <tbody>
        <% for (let participation of policeOfficer.participations) { %>
        <tr>
            <td><%= participation.Case.name%></td>
            <td><%= fmt.formatDate(participation.startingDate) %></td>
            <td><%= fmt.formatDate(participation.endingDate) %></td>
            <td><ul class="list-actions">
                    <a class="list-actions-button-details" href="/Case/details/<%= participation._id %>"><span class="material-symbols-outlined">info</span></a>
                </ul>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
    <% } %>

</main>

<%- include('../../fragments/footer.ejs') %>