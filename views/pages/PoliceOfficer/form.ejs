<%- include('../../fragments/header.ejs') %>

<main>
    <script type="application/javascript" src="/js/validationPoliceOfficerForm.js"></script>
    <script type="application/javascript" src="/js/validationCommon.js"></script>
    <h2><%= pageTitle %></h2>
    <form class="form" method="post" action="<%= formAction %>" novalidate onsubmit="return validateForm();">
        <input type="hidden" name="_id" value="<%= policeOfficer._id %>">
        <label for="firstName">Imię: <span class="symbol-required">*</span></label>
        <input type="text" name="firstName" id="firstName" placeholder="2-50 znaków" value="<%= policeOfficer.firstName %>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorFirstName" class="errors-text"></span>
        <label for="lastName">Nazwisko: <span class="symbol-required">*</span></label>
        <input type="text" name="lastName" id="lastName" placeholder="2-50 znaków" value="<%= policeOfficer.lastName%>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorLastName" class="errors-text"></span>
        <label for="rank">Stopień: <span class="symbol-required">*</span></label>
        <% //var options = [ "Posterunkowy", "Starszy posterunkowy", "", "", "", "", "", "", "", "", "", "", "", "", "", "", "" ]; %>
        <select name="rank" id="rank" <%= (formMode == 'showDetails') ? 'disabled' : '' %>>
            <option><%= policeOfficer.rank %></option>
            <option value="Posterunkowy">Posterunkowy</option>
            <option value="Starszy posterunkowy">Starszy posterunkowy</option>
            <option value="Sierżant">Sierżant</option>
            <option value="Starszy sierżant">Starszy sierżant</option>
            <option value="Sierżant sztabowy">Sierżant sztabowy</option>
            <option value="Młodszy aspirant">Młodszy aspirant</option>
            <option value="Aspirant">Aspirant</option>
            <option value="Starszy aspirant">Starszy aspirant</option>
            <option value="Aspirant sztabowy">Aspirant sztabowy</option>
            <option value="Podkomisarz">Podkomisarz</option>
            <option value="Komisarz">Komisarz</option>
            <option value="Nadkomisarz">Nadkomisarz</option>
            <option value="Podinspektor">Podinspektor</option>
            <option value="Młodszy inspektor">Młodszy inspektor</option>
            <option value="Inspektor">Inspektor</option>
            <option value="Nadinspektor">Nadinspektor</option>
            <option value="Generalny inspektor">Generalny inspektor</option>
        </select>
        <span id="errorRank" class="errors-text"></span>
        <label for="department">Wydział: <span class="symbol-required">*</span></label>
        <input type="text" name="department" id="department" placeholder="2-50 znaków" value="<%= policeOfficer.department%>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorDepartment" class="errors-text"></span>
        <label for="salary">Pensja: <span class="symbol-required">*</span></label>
        <input type="number" name="salary" id="salary" step="any" placeholder="np. 3000.00 zł" value="<%= policeOfficer.salary%>" <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorSalary" class="errors-text"></span>
            <% if (formMode != 'showDetails') { %>
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
                <input class="form-button-submit" type="submit" value="<%= btnLabel %>"/>
                <a class="form-button-cancel" href="/PoliceOfficer">Anuluj</a>
            </div>
            <% } else { %>
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
            <a class="details-button-edit" href="/PoliceOfficer/edit/<%= policeOfficer._id%>">Edytuj</a>
            <a class="form-button-cancel" href="/PoliceOfficer">Powrót</a>
            </div>
            <% } %>

    </form>
    <% if (formMode == 'showDetails' || formMode == 'edit') { %>
    <h2>Szczegóły uczestnictwa w sprawach</h2>
    <table class="table-list">
        <thead>
        <tr>
            <th>Sprawa</th>
            <th>Data rozpoczęcia</th>
            <th>Data zakończenia</th>
            <th>Podjęte działania</th>
        </tr>
        </thead>
        <tbody>
        <% for (let participation of policeOfficer.participations) { %>
        <tr>
            <td><%= participation.Case.name%></td>
            <td><%= participation.startingDate.toISOString().split('T')[0] %></td>
            <td><%= participation.endingDate ? participation.endingDate.toISOString().split('T')[0] : '' %></td>
            <td><ul class="list-actions">
                    <a class="list-actions-button-details" href="/Case/details/<%= participation._id %>"><span class="material-symbols-outlined">info</span></a>
                </ul>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
    <% } %>

</main>

<%- include('../../fragments/footer.ejs') %>